<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CompanyRegDemo">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lexend_deca"
            android:text="Register Company"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:fontFamily="@font/lexend_deca"
            android:hint="Company Name"
            android:includeFontPadding="true"
            android:inputType="text"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tname"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:fontFamily="@font/lexend_deca"
            android:hint="Company TID"
            android:includeFontPadding="true"
            android:inputType="phone"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tid"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:fontFamily="@font/lexend_deca"
            android:hint="Company Mail"
            android:includeFontPadding="true"
            android:inputType="textEmailAddress"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tmail"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:fontFamily="@font/lexend_deca"
            android:hint="Location"
            android:includeFontPadding="true"
            android:inputType="text"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/companytyp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tloc"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/tsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companytyp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:fontFamily="@font/lexend_deca"
            android:hint="Company Size"
            android:includeFontPadding="true"
            android:inputType="numberSigned"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tsize"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:fontFamily="@font/lexend_deca"
            android:hint="Write something about company"
            android:includeFontPadding="true"
            android:inputType="text"
            android:minHeight="100dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/multipick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabout"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbutton1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/lexend_deca"
                android:onClick="onRadioButtonClicked"
                android:text="Yes"
                android:textColor="#373737"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rbutton2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:fontFamily="@font/lexend_deca"
                android:onClick="onRadioButtonClicked"
                android:text="No"
                android:textColor="#373737"
                android:textSize="15sp" />
        </RadioGroup>

        <EditText
            android:id="@+id/tpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/multipick"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#D7F6FA"
            android:fontFamily="@font/lexend_deca"
            android:hint="Password"
            android:includeFontPadding="true"
            android:inputType="textPassword"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rgstrb"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tpass"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#9C27B0"
            android:fontFamily="@font/lexend_deca"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="#FFFCFC"
            android:textSize="16sp"
            android:textStyle="bold" />



    </RelativeLayout>


</ScrollView>